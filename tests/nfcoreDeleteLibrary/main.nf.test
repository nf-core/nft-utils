nextflow_process {

    name "Test Process TEST_MODULE"
    script "./main.nf"
    process "TEST_MODULE"

    tag "test"

    test("test plugin") {

        setup {
            nfcoreSetup("${launchDir}/library/")
            nfcoreInstall("${launchDir}/library/", ["minimap2/index"])
            nfcoreDeleteLibrary("${launchDir}/library/")
        }

        then {
            assertAll(
                { assert !path("${launchDir}/library").exists() }
            )
        }

    }

}
