nextflow_process {

    name "Test Process TEST_MODULE"
    script "./main.nf"
    process "TEST_MODULE"

    tag "test"

    test("test plugin") {

        setup {
            nfcoreSetup("${launchDir}/library/")
        }

        then {
            assertAll(
                { assert path("${launchDir}/library/").exists() },
                { assert path("${launchDir}/library/modules").exists() },
                { assert path("${launchDir}/library/.nf-core.yml").exists() }
            )
        }

    }

}
